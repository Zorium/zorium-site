@require 'zorium-paper/base'
@require '../../vendor/highlight.js_default.css'
@require '../../vendor/highlight.js_monokai_sublime.css'

json('zorium-paper/colors.json')

.z-md
  zp-font-body2()

  > h1
    zp-font-headline()
    margin-top: 26px

  > h2
    zp-font-title()
    margin-top: 26px

  > h3
    zp-font-subhead()

  .anchor
    // Padding for anchor tag
    padding-top: 150px
    margin-top: -150px
    display: block

  a
    font-weight: bold
    color: $blueGrey500

  > pre
    zp-shadow-1()
    border-radius: 2px
    background: #23241f
    padding: 12px
    line-height: 20px
    color: $white

    @media (min-width: 1000px)
      padding: 24px
