@require 'nib'
@require 'zorium-paper/base'

json('zorium-paper/colors.json')

max-width(n)
  max-width: 56 * n px

  @media (min-width: 1000px)
    max-width: 64 * n px

.z-menu
  > .overlay
    position: fixed
    top: 0
    left: 0
    height: 100%
    width: 100%
    background: $black
    opacity: 0.5
    z-index: 100000
    transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1)

  > .container
    position: fixed
    z-index: 100001
    width: 100%
    height: 100%
    display: flex
    transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1)
    pointer-events: none

    > .menu
      max-width(6)
      flex: 1
      background: $white
      border-right: 1px solid $grey300
      overflow: auto
      pointer-events: auto

      > .logo
        zp-font-display1()
        padding: 12px 20px
        display: block

      > .break
        height: 1px
        background $grey300

      > .list
        > .group
          > .section
            display: block
            padding: 20px 20px
            cursor: pointer

            &:hover
              background: $grey100

            &:active
              background: $grey200

            &.is-selected
              font-weight: bold

          > .link
            zp-font-body2()
            display: block
            padding: 10px 40px

            &:hover
              background: $grey100

            &:active
              background: $grey200

    > .padder
      width: 56px

  &.is-hidden
    > .overlay
      opacity: 0
      pointer-events: none

    > .container
      // -1 for the border
      transform: translate(-56 * 6 - 1 px, 0)

  &.is-permanent
    > .stub
      width: 56 * 6 px

    > .overlay
      display: none

    > .container
      transform: translate(0, 0)

  @media (min-width: 1000px)
    &.is-permanent
      > .stub
        width: 64 * 6 px

    &.is-hidden
      > .container
        // -1 for the border
        transform: translate(-64 * 6 - 1 px, 0)
