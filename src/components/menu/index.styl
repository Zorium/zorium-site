@require 'nib'
@require 'zorium-paper/base'

json('zorium-paper/colors.json')

.z-menu
  height: 100%

  > .container
    height: 100%
    background: $white
    border-right: 1px solid $grey300
    overflow: auto

    > .logo
      zp-font-display1()
      padding: 12px 20px

    > .break
      height: 1px
      background $grey300

    > .list
      > .group
        > .section
          display: block
          padding: 20px 20px

          &:hover
            background: $grey100

          &.is-selected
            font-weight: bold

        > .link
          zp-font-body2()
          display: block
          padding: 10px 40px

          &:hover
            background: $grey100
