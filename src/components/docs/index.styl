@require 'zorium-paper/base'

json('zorium-paper/colors.json')

.z-docs_paper-hack
  > .shadows
    > .box
      width: 100px
      height: 100px
      margin: 20px
      background: $white
      display: inline-block

    > .height-1
      zp-shadow-1()

    > .height-2
      zp-shadow-2()

    > .height-3
      zp-shadow-3()

    > .height-4
      zp-shadow-4()

    > .height-5
      zp-shadow-5()

  > .fonts
    > .font
      > .var
          display: inline-block
          width: 100px

      > .display4
        zp-font-display4()
      > .display3
        zp-font-display3()
      > .display2
        zp-font-display2()
      > .display1
        zp-font-display1()
      > .headline
        zp-font-headline()
      > .title
        zp-font-title()
      > .subhead
        zp-font-subhead()
      > .body2
        zp-font-body2()
      > .body1
        zp-font-body1()
      > .caption
        zp-font-caption()
      > .button
        zp-font-button()
