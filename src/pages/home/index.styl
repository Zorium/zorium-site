.p-home
  position: absolute
  width: 100%
  display: flex

  > .menu
    flex: none
    height: 100%

  > .content
    flex: 1
    transition: padding 0.2s cubic-bezier(0.4, 0, 0.2, 1)

    > .inner-padding
      padding: 10px 20px

  @media (min-width: 1000px)
    > .content
      > .inner-padding
        padding: 30px 40px
